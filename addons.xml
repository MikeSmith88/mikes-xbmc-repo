<?xml version="1.0" encoding="UTF-8"?>

<addons>

<addon 	id="plugin.audio.rdio" 
	version="1.7.1" 
	name="Rdio" 
	provider-name="Mike">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.parsedom" version="0.9.2"/>
    <import addon="script.module.t0mm0.common" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="rdioplugin.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play your Rdio collections and playlists through XBMC</summary>
    <description>
      Rdio is a subscription music service which allows you to manage your music collection and playlists, play and download them to various devices and discover new music through your friends and followers. This addon allows you to play music from Rdio through XBMC.
    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="script.xbmc.pandora"
       name="Pandora"
       version="2.1.0"
       provider-name="Mike">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Pandora Radio</summary>
    <description lang="en">Pandora Internet Radio for XBMC.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.mike.xbmc-plugins" name="Mike's XBMC Addons" version="1.0.2" provider-name="Mike">
  <extension point="xbmc.addon.repository" name="Mike's XBMC Addon Repository">
    <info compressed="false">https://github.com/MikeSmith88/mikes-xbmc-repo/raw/master/addons.xml</info>
    <checksum>https://github.com/MikeSmith88/mikes-xbmc-repo/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">https://github.com/MikeSmith88/mikes-xbmc-repo/raw/master/repo/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install Mike's Addons</summary>
    <description>Download and install addons by Mike</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>

